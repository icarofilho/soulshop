<div class="text-center">
    <h1>Vale-Presente</h1>
    <h3>Presenteie alguém especial!</h3>
</div>
<div class="container-md">
    <div class="container-md">
        <div class="row">
            <div class="col">
                <img src="{{vale.img_url}}" class="img-fluid" >
                <h4>{{vale.title}}</h4>
                <p>R$ {{vale.price}}</p>
                <p>{{vale.desc}}</p>
            </div>
            <div class="col">
                <form action="/vale/{{id}}/checkout" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Remetente</label>
                        <input
                            type="name"
                            class="form-control"
                            id="exampleFormControlInput1"
                            placeholder="Quem está enviando o presente"
                            name="sender"
                        />
                        <label for="exampleFormControlInput1">E-mail</label>
                        <input
                            type="email"
                            class="form-control"
                            id="exampleFormControlInput1"
                            placeholder="name@example.com"
                            name="emailSender"
                        />
                        <label for="exampleFormControlInput1">Destinatário</label>
                        <input
                            type="name"
                            class="form-control"
                            id="exampleFormControlInput1"
                            placeholder="Quem vai receber o presente"
                            name="receiver"
                        />
                        <label for="exampleFormControlInput1">E-mail</label>
                        <input
                            type="email"
                            class="form-control"
                            id="exampleFormControlInput1"
                            placeholder="name@example.com"
                            name="emailReceiver"
                        />
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Deixe aqui sua mensagem</label>
                        <textarea
                            class="form-control"
                            id="FormControlTextarea1"
                            rows="5"
                            name="message"
                        ></textarea>
                    </div>
                    <button type="submit" class="btn btn-dark">Checkout</button>
                </form>
            </div>
        </div>
    </div>
</div>