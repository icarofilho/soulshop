<div class="container">
    <h1>Vale-Presente</h1>
    <h3>Presenteie alguém especial!</h3>
    <form>
        <div class="form-group">
            <label for="exampleFormControlInput1">Remetente</label>
            <input
                type="name"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="Quem está enviando o presente"
            />
            <label for="exampleFormControlInput1">E-mail</label>
            <input
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="name@example.com"
            />
            <label for="exampleFormControlInput1">Destinatário</label>
            <input
                type="name"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="Quem vai receber o presente"
            />
            <label for="exampleFormControlInput1">E-mail</label>
            <input
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="name@example.com"
            />
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Deixe aqui sua mensagem</label>
            <textarea
                class="form-control"
                id="FormControlTextarea1"
                rows="5"
            ></textarea>
        </div>
        <h3>Dados para pagamento</h3>
        <div class="form-group">
            <label for="exampleFormControlInput1">Nome</label>
            <input
                type="name"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="Autor(a) do pagamento"
            />
            <label for="exampleFormControlInput1">E-mail</label>
            <input
                type="email"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="Email de contato"
            />
            <label for="exampleFormControlSelect1">Forma de pagamento</label>
            <select class="form-control" id="exampleFormControlSelect1">
                <option>À vista via Pix</option>
                <option>À vista no boleto bancário</option>
                <option>Parcelado no cartão de crédito</option>
            </select>
        </div>
        <button type="button" class="btn btn-dark">Avançar</button>
    </form>
</div>