<div class="text-center mt-3">
    <h1>Vale-Presente</h1>
    <h3>Presenteie alguém especial!</h3>
</div>

<div class="container-md">
    <div class="row mt-4">
        <div class="col-lg-6 col-xs-12">
            <div class="card">
                <img src="{{vale.img_url}}" class="card-img-top img-fluid" alt=""  />
                <div class="card-body">
                    <h4 class="card-title">{{vale.title}} - R$ {{vale.price}}</h4>
                    <p>{{vale.desc}}</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-xs-12 mt-5">
            <form action="/vale/{{id}}/checkout" method="POST">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Remetente</label>
                    <input
                        type="name"
                        class="form-control"
                        id="exampleFormControlInput1"
                        placeholder="Quem está enviando o presente"
                        name="sender"
                    />
                    <label for="exampleFormControlInput1">E-mail</label>
                    <input
                        type="email"
                        class="form-control"
                        id="exampleFormControlInput1"
                        placeholder="name@example.com"
                        name="emailSender"
                    />
                    <label for="exampleFormControlInput1">Destinatário</label>
                    <input
                        type="name"
                        class="form-control"
                        id="exampleFormControlInput1"
                        placeholder="Quem vai receber o presente"
                        name="receiver"
                    />
                    <label for="exampleFormControlInput1">E-mail</label>
                    <input
                        type="email"
                        class="form-control"
                        id="exampleFormControlInput1"
                        placeholder="name@example.com"
                        name="emailReceiver"
                    />
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Deixe aqui sua mensagem</label>
                    <textarea
                        class="form-control"
                        id="FormControlTextarea1"
                        rows="5"
                        name="message"
                    ></textarea>
                    <button type="submit" class="btn btn-dark mt-2">Checkout</button>
                </div>
            </form>
        </div>
    </div>
</div>
