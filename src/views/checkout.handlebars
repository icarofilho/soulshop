<div class="container-md text-center m-4">
    <h3>Dados para pagamento</h3>
</div>

<div class="container-md mt-5">
    <div class="card bg-light">
        <div class="row justify-content-center m-4">
            <div class="col-lg-3 col-xs-10">
                <div class="card" style="width: 18rem;">
                    <img src="{{vale.img_url}}" class="card-img-top" alt="..." />
                    <div class="card-body bg-light">
                        <p class="card-title fs-4 fw-bold">{{vale.title}}
                            <span class="card-text">R$ {{vale.price}}</span>
                        </p>
                        <p>De: {{sender}} - {{emailSender}}</p>
                        {{!-- <p>{{emailSender}}</p> --}}
                        <p>Para: {{receiver}} - {{emailReceiver}}</p>
                        {{!-- <p>{{emailReceiver}}</p> --}}
                        <p>Mensagem: "{{message}}"</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-xs-10 bg-light">
                <div class="form-group mt-5 bg-light">
                    <form action="/vale/{{id}}/checkout/compra_vale" method="POST">
                        <label for="exampleFormControlInput1">Nome</label>
                        <input
                            type="name"
                            class="form-control"
                            id="exampleFormControlInput1"
                            placeholder="Autor(a) do pagamento"
                            name="payment_name"
                        />
                        <label for="exampleFormControlInput1">E-mail</label>
                        <input
                            type="email"
                            class="form-control"
                            id="exampleFormControlInput1"
                            placeholder="Email de contato"
                            name="payment_email"
                        />
                        <label for="exampleFormControlSelect1">Forma de pagamento</label>
                        {{!-- <select class="form-control" id="exampleFormControlSelect1"> --}}
                        <select class="form-select form-control" aria-label="Default select example" id="exampleFormControlSelect1">
                            <option>À vista via Pix</option>
                            <option>À vista no boleto bancário</option>
                            <option>Parcelado no cartão de crédito</option>
                        </select>
                        <button type="submit" class="btn btn-warning mt-2">Finalizar Compra</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>