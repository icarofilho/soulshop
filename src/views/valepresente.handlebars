<section class="m-1">
    <a href="/vale/novo" class="btn btn-primary mt-2">
        <i class="bi bi-plus"></i>
        Criar Vale Presente
    </a>
    <hr />
    <form method="GET">
        <input type="text" name="nomeVale" placeholder="Nome do Vale Presente" class="form-control form-control-sm" value="{{nomeVale}}" required>
        <button class="btn btn-sm btn-dark mt-2 ms-5">
            <i class="bi bi-search"> Buscar</i>
        </button>
    </form>
    <div class="container-fluid">
        <div class="vales d-flex flex-wrap">
            <div class="row d-flex row-cols-2 row-cols-md-3 g-4">
                <div class="col">
                {{#each vales}}
                    <div class="card ms-5">
                        <img class="card-img-top" src={{this.img_url}} alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}} - R$ {{this.price}}</h5>
                            <p class="card-text">{{this.desc}}</p>
                            <a href="/vale/{{this._id}}" class="card-link">Eu Quero</a>
                    </div>
                    <div class="card-body">
                        <div>
                            <a href="/vale/editar/{{this._id}}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                        <div>
                            <form action="/vale/deletar" method="POST">
                                <input name="id" type="hidden" value="{{this._id}}" />
                                    <button class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                            </form>
                        </div>
                    </div>
                {{/each}}
                </div>
            </div>
        </div>
    </div>