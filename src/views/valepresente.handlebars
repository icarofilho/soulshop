<section class="m-1 container-fluid">
    <a href="/vale/novo" class="btn btn-primary mt-2">
        <i class="bi bi-plus"></i>
        Criar Vale Presente
    </a>
    <hr />
    <form method="GET">
        <input type="text" name="nomeVale" placeholder="Nome do Vale Presente" class="form-control form-control-sm" value="{{nomeVale}}" required>
        <button class="btn btn-sm btn-dark mt-2 ms-5">
            <i class="bi bi-search"> Buscar</i>
        </button>
    </form>
    {{#each vales}}
    <div class="container-fluid d-flex justify-content-center">
        <div class="card-max">
                <div class="card ms-5 mb-3">
                    <img class="card-img-top" src={{this.img_url}} alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}} - R$ {{this.price}}</h5>
                        <p class="card-text">{{this.desc}}</p>
                        <div class="d-flex">
                            <a href="/vale/{{this._id}}" class=" btn btn-primary">Eu Quero</a>
                            <a href="/vale/editar/{{this._id}}" class="btn ms-2 me-2 btn-large btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form action="/vale/deletar" method="POST">
                                <input name="id" type="hidden" value="{{this._id}}" />
                                    <button class="btn btn-large btn-danger">
                                        <i class=" bi bi-trash"></i>
                                    </button>
                            </form>
                        </div>
                    
                    </div>
                </div>

        </div>
    </div>
    {{/each}}
</section>
